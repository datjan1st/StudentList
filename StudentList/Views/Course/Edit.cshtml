@model Course

<form method="post" asp-controller="Course" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Course</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="CourseName">Course Name</label>
            <input asp-for="CourseName" class="form-control"/>
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update Course</button>
        <a asp-controller="Course" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>